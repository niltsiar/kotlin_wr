<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:id="@+id/main_view"
  tools:context=".MainActivity">

  <androidx.constraintlayout.widget.Guideline
    android:id="@+id/left_guideline"
    android:layout_width="@dimen/zero"
    android:layout_height="@dimen/zero"
    app:layout_constraintGuide_begin="@dimen/activity_horizontal_margin"
    android:orientation="vertical" />

  <androidx.constraintlayout.widget.Guideline
    android:id="@+id/right_guideline"
    android:layout_width="@dimen/zero"
    android:layout_height="@dimen/zero"
    app:layout_constraintGuide_end="@dimen/activity_horizontal_margin"
    android:orientation="vertical" />

  <androidx.constraintlayout.widget.Guideline
    android:id="@+id/top_guideline"
    android:layout_width="@dimen/zero"
    android:layout_height="@dimen/zero"
    app:layout_constraintGuide_begin="@dimen/activity_vertical_margin"
    android:orientation="horizontal" />

  <androidx.constraintlayout.widget.Guideline
    android:id="@+id/bottom_guideline"
    android:layout_width="@dimen/zero"
    android:layout_height="@dimen/zero"
    app:layout_constraintGuide_end="@dimen/activity_vertical_margin"
    android:orientation="horizontal" />

  <androidx.recyclerview.widget.RecyclerView
    android:id="@+id/todos"
    android:layout_width="@dimen/zero"
    android:layout_height="@dimen/zero"
    android:clipToPadding="false"
    app:layout_constraintLeft_toLeftOf="@id/left_guideline"
    app:layout_constraintRight_toRightOf="@id/right_guideline"
    app:layout_constraintTop_toTopOf="@id/top_guideline"
    app:layout_constraintBottom_toTopOf="@id/new_todo"
    tools:itemCount="5"
    tools:listitem="@layout/view_holder_todo" />

  <com.google.android.material.textfield.TextInputLayout
    android:id="@+id/new_todo"
    android:layout_width="@dimen/zero"
    android:layout_height="wrap_content"
    android:hint="@string/new_todo_hint"
    app:layout_constraintTop_toBottomOf="@id/todos"
    app:layout_constraintBottom_toTopOf="@id/add_new_todo"
    app:layout_constraintLeft_toLeftOf="@id/left_guideline"
    app:layout_constraintRight_toRightOf="@id/right_guideline">

    <com.google.android.material.textfield.TextInputEditText
      android:id="@+id/new_todo_text"
      android:maxLines="1"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" />

  </com.google.android.material.textfield.TextInputLayout>

  <Button
    android:id="@+id/add_new_todo"
    app:layout_constraintBottom_toBottomOf="@id/bottom_guideline"
    app:layout_constraintTop_toBottomOf="@id/new_todo"
    app:layout_constraintLeft_toLeftOf="@id/left_guideline"
    app:layout_constraintRight_toRightOf="@id/right_guideline"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/add_todo" />

</androidx.constraintlayout.widget.ConstraintLayout>
